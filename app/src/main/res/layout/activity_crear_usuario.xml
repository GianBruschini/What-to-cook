<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gian.Model.CrearUsuarioActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="236dp"
        android:layout_height="90dp"
        android:layout_marginTop="116dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Crea tu nombre de usuario"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/button3"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/registrarsebtn"
        android:elevation="5dp"
        android:onClick="guardarNombre"
        android:text="Guardar nombre de usuario"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.572"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.647" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/usuario"
        android:layout_width="386dp"
        android:layout_height="58dp"
        android:layout_marginBottom="352dp"
        android:background="@drawable/btn"
        android:elevation="5dp"
        android:paddingLeft="9dp"
        android:textColorHint="#CFC9C9"
        app:errorEnabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.886">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="12dp"
            android:hint="Nombre de usuario"
            android:inputType="textEmailAddress"
            android:paddingLeft="15dp"
            android:paddingBottom="30dp" />
    </com.google.android.material.textfield.TextInputLayout>


</androidx.constraintlayout.widget.ConstraintLayout>