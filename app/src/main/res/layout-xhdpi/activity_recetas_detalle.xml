<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#A6FFFFFF"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imagenRecetaFondo"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:scaleType="centerCrop"
            android:background="#A6FFFFFF"
            app:riv_corner_radius_bottom_left="20dp"
            app:riv_corner_radius_bottom_right="20dp"
            >
        </com.makeramen.roundedimageview.RoundedImageView>

    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewDatos"
        android:layout_width="340dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        app:cardCornerRadius="40dp"
        android:elevation="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/recetaLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:text="Sopa de verduras"
                    android:autoSizeMaxTextSize="12sp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="#000000"
                    >
                </TextView>

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/linear"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_access_time_24">

                </ImageView>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center"
                    android:text="35 min">

                </TextView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_person_24"
                    android:layout_marginStart="15dp">

                </ImageView>

                <TextView
                    android:id="@+id/serving"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center"
                    android:text="2">

                </TextView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/ic_baseline_local_calories_24">

                </ImageView>

                <TextView
                    android:id="@+id/calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center"
                    android:text="2302 kcal">

                </TextView>

            </LinearLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>



    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="20dp"
        android:onClick="returnToListOfFood"
        android:src="@drawable/ic_baseline_arrow_back_ios_24">

    </ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">

        <ToggleButton
            android:id="@+id/add_to_favourite"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:textOn=""
            android:textOff=""
            android:background="@drawable/favourite_icon_selector"
            android:layout_marginBottom="20dp"
            android:onClick="returnToListOfFood"
            >

        </ToggleButton>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cardViewDatos">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/nutrition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="#5a2b53"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:text="Nutrition"
                >
            </TextView>


            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/nutrition"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cal"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textColor="#000">
                    </TextView>

                    <TextView
                        android:id="@+id/calorias_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="568"
                        android:fontFamily="@font/montserrat_light"
                        android:textColor="#000">
                    </TextView>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="20dp"
                    android:background="@android:color/darker_gray"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Protein"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textColor="#000">
                    </TextView>

                    <TextView
                        android:id="@+id/proteinas_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="568"
                        android:fontFamily="@font/montserrat_light"
                        android:textColor="#000">
                    </TextView>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="20dp"
                    android:background="@android:color/darker_gray"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fat"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textColor="#000">
                    </TextView>

                    <TextView
                        android:id="@+id/grasas_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="568"
                        android:fontFamily="@font/montserrat_light"
                        android:textColor="#000">
                    </TextView>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="20dp"
                    android:background="@android:color/darker_gray"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Carb"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textColor="#000">
                    </TextView>

                    <TextView
                        android:id="@+id/carb_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="568"
                        android:fontFamily="@font/montserrat_light"
                        android:textColor="#000">
                    </TextView>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="20dp"
                    android:background="@android:color/darker_gray"/>



            </LinearLayout>


            <TextView
                android:id="@+id/text_ingredients"
                android:text="Ingredients"
                android:layout_below="@id/linear2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="#5a2b53"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp">

            </TextView>


            <TextView
                android:id="@+id/ingrTxt"
                android:layout_below="@id/text_ingredients"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/montserrat_light"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/instructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instructions"
                android:layout_below="@id/ingrTxt"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="#5a2b53"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp">

            </TextView>

            <TextView
                android:id="@+id/instructions_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/instructions"
                android:fontFamily="@font/montserrat_light"
                android:text=""
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                >
            </TextView>


            <Button
                android:id="@+id/buttonViewRecipe"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_below="@id/instructions_description"
                android:text="View full recipe"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:fontFamily="@font/montserrat_semibold"
                android:background="@drawable/registrarsebtn"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"

                >
            </Button>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>